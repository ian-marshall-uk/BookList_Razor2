@page
@model BookList_Razor2.Pages.BookList.DetailsModel
@{
    ViewData["Title"] = "Details";
}

<br />
<h2>Book details</h2>
<br />


<div style="border: 1px solid #bbb9b9; border-radius: 5px">
    <form method="post">
        <div class="row" style="padding-left: 50px; padding-top: 30px;">
            <fieldset disabled>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-1">
                            <label asp-for="Book.ISBN"></label>
                        </div>
                        <div class="col-sm-3">
                            <input asp-for="Book.ISBN" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-1">
                            <label asp-for="Book.Title"></label>
                        </div>
                        <div class="col-sm-5">
                            <input asp-for="Book.Title" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-1">
                            <label asp-for="Book.Author"></label>
                        </div>
                        <div class="col-sm-5">
                            <input asp-for="Book.Author" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-1">
                            <label asp-for="Book.Price"></label>
                        </div>
                        <div class="col-sm-2">
                            <input asp-for="Book.Price" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-1">
                            <label asp-for="Book.Availability"></label>
                        </div>
                        <div class="col-sm-2">
                            <input asp-for="Book.Availability" class="form-control" />
                        </div>
                    </div>
                </div>
                <br />
            </fieldset>
            <div class="form-group">
                <a asp-page="Edit" class="btn btn-success btn-sm">Edit</a>
                <a asp-page="Index" class="btn btn-primary btn-sm">Back to list</a>
            </div>
        </div>
    </form>
</div>

